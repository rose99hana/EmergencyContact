@model IEnumerable<FINALTEST.Models.TobeSend>

@{
    ViewBag.Title = "Index";
    ViewBag.Home = "active";
}

<h2>災害警戒管理</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>






<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactDetail.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Warning.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendStatus)
        </th>
        <td>
            @Html.ActionLink("Delete All", "DeleteAll", new { id = "All" })
        </td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactDetail.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Warning.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
